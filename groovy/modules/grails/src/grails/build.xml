        <!-- <parallel>
            <daemons>
                <antcall target="run-app:impl" />
            </daemons>
        </parallel>
        <echoproperties /> -->
        <java classname="groovy.ui.GroovyMain" >
            <arg line="webtest/tests/TestSuite"/>
