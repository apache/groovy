        <mkdir dir="tmp/war/WEB-INF/tld"/>
        <mkdir dir="tmp/war/js"/>
        <copy todir="tmp/war/WEB-INF/lib">
            <fileset dir="${grails.home}/lib">
                <include name="antlr-2.7.6rc1.jar"/>
                <include name="asm.jar"/>
