>
    <class
    	
        name="org.codehaus.groovy.grails.orm.hibernate.HibernateMappedClass"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="id"
            column="id"
            type="int"
        >
            <generator class="native">
              <!--  
